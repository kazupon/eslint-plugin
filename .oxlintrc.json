{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "plugins": ["typescript", "import", "promise", "unicorn", "node"],
  "overrides": [
    {
      "files": ["**/*.{test,spec}.{ts,tsx}"],
      "plugins": ["vitest"]
    }
  ],
  "ignorePatterns": [
    "**/node_modules",
    "**/dist",
    "**/lib",
    ".vscode/**/*.json",
    "docs/.vitepress",
    "**/tsconfig*.json",
    "CHANGELOG.md",
    "scripts/oxlint-config.d.ts",
    "oxlint",
    ".claude",
    ".vscode"
  ]
}
