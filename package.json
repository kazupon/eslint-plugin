{
  "name": "@kazupon/eslint-plugin",
  "description": "ESLint plugin for @kazupon",
  "version": "0.7.1",
  "license": "MIT",
  "funding": "https://github.com/sponsors/kazupon",
  "bugs": {
    "url": "https://github.com/kazupon/eslint-plugin/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/eslint-plugin.git"
  },
  "keywords": [
    "eslint",
    "lint",
    "plugin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">= 20"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "lib",
    "oxlint"
  ],
  "module": "lib/index.js",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "default": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "lib/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./lib/*",
        "./*"
      ]
    }
  },
  "scripts": {
    "build": "tsdown && pnpm run gen:oxlint:config",
    "changelog": "gh-changelogen --repo=kazupon/eslint-plugin",
    "clean": "git clean -df",
    "dev": "pnpx @eslint/config-inspector --config eslint.config.ts",
    "dev:eslint": "pnpx @eslint/config-inspector --config eslint.config.ts",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "docs:readme": "tsx scripts/update-readme.ts",
    "docs:rules": "tsx scripts/update-docs.ts",
    "fix": "pnpm run --color \"/^fix:/\"",
    "fix:eslint": "eslint . --fix",
    "fix:knip": "knip --fix --no-exit-code",
    "fix:oxfmt": "oxfmt --config ./node_modules/@kazupon/prettier-config/index.json",
    "fix:oxlint": "oxlint --type-aware --fix",
    "gen:oxlint:config": "tsx ./scripts/generate-oxlint-config.ts",
    "gen:oxlint:dts": "cat ./node_modules/oxlint/configuration_schema.json | json2ts > scripts/oxlint-config.d.ts",
    "lint": "pnpm run --color \"/^lint:/\"",
    "lint:eslint": "eslint . --cache",
    "lint:knip": "knip",
    "lint:oxfmt": "oxfmt . --check --config ./node_modules/@kazupon/prettier-config/index.json",
    "lint:oxlint": "oxlint --type-aware",
    "prepack": "pnpm build",
    "prepare": "git config --local core.hooksPath .githooks && pnpm gen:oxlint:dts",
    "release": "bumpp --commit \"release: v%s\" --all --push --tag",
    "test": "vitest run",
    "typecheck": "tsgo --noEmit --diagnostics"
  },
  "dependencies": {
    "@es-joy/jsdoccomment": "^0.78.0",
    "@eslint/core": "^1.0.0"
  },
  "peerDependencies": {
    "eslint": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/markdown": "^7.5.1",
    "@kazupon/eslint-config": "^0.44.0",
    "@kazupon/jts-utils": "^0.8.0",
    "@kazupon/prettier-config": "^0.2.0",
    "@shikijs/vitepress-twoslash": "^3.21.0",
    "@types/node": "^25.0.3",
    "@typescript/native-preview": "7.0.0-dev.20260105.1",
    "@vitest/eslint-plugin": "^1.6.6",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^58.1.1",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-markdown-preferences": "^0.10.0",
    "eslint-plugin-module-interop": "^0.3.1",
    "eslint-plugin-oxlint": "^1.38.0",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-yml": "^1.19.1",
    "gh-changelogen": "^0.2.8",
    "json-schema-to-typescript": "^15.0.4",
    "knip": "^5.80.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.38.0",
    "oxlint-tsgolint": "^0.10.1",
    "pkg-pr-new": "^0.0.62",
    "publint": "^0.3.16",
    "tsdown": "^0.15.12",
    "tsx": "^4.21.0",
    "twoslash-eslint": "^0.3.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite-plugin-eslint4b": "^0.6.0",
    "vitepress": "^1.6.4",
    "vitepress-plugin-group-icons": "^1.6.5",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "overrides": {
      "tsdown@0.15.4>rolldown": "^1.0.0-beta.59"
    }
  },
  "prettier": "@kazupon/prettier-config",
  "lint-staged": {
    "*.ts?(x)": [
      "oxfmt --config ./node_modules/@kazupon/prettier-config/index.json --no-error-on-unmatched-pattern",
      "oxlint --config .oxlintrc.json --type-aware --fix",
      "eslint --fix"
    ],
    "*.{js,mjs,cjs}": [
      "oxfmt --config ./node_modules/@kazupon/prettier-config/index.json --no-error-on-unmatched-pattern",
      "oxlint --config .oxlintrc.json --type-aware --fix",
      "eslint --fix"
    ],
    "*.{json,jsonc,json5,md,yml,yaml}": [
      "oxfmt --config ./node_modules/@kazupon/prettier-config/index.json --no-error-on-unmatched-pattern",
      "eslint --fix"
    ]
  }
}
